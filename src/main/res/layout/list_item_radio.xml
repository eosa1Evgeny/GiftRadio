<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/id_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="4dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:padding="4dp">

            <TextView
                android:id="@+id/list_item_radio_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioTitle"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/list_item_radio_data_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/list_item_radio_title_text_view"
                android:layout_marginTop="17dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/txtOptionDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="8dp"
                android:src="@drawable/ic_popup_menu"
                android:textAppearance="?android:textAppearanceLarge" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>